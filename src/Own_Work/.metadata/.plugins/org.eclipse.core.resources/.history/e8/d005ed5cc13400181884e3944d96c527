package com.sunbeam.Assign;

public class Manager extends Employee{
	
	double incentives;
	
	public Manager()
	{
		this.incentives= 0.0;
	}
	//constructors, mutators, inspectors, facilitators;
	public void accept()
	{
		System.out.println("Enter incentives:");
		this.incentives = Main.sc.nextInt();
		
	}
	public void display()
	{
		System.out.printf("Incentive : %d\n", this.incentives);
	}
	public double getTotalSalary()
	{
		
		
		double totsal = Basicsalary + 30% DA + incentives;
		return totsal;
	}

}
